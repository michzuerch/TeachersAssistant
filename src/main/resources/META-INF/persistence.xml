<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="LehrerVerwaltungPU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/LehrerVerwaltungDS</jta-data-source>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.Schule</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.Lehrer</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.Schueler</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.Klasse</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.report.jasper.ReportJasper</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.report.jasper.ReportJasper</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.report.jasper.ReportJasperImage</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.report.css.ReportCSS</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.report.css.ReportCSSImage</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.report.fop.ReportFOP</class>
        <class>com.gmail.michzuerch.LehrerVerwaltung.backend.entity.report.fop.ReportFOPImage</class>
        <properties>
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.transaction.flush_before_completion" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
            <property name="hibernate.jdbc.use_streams_for_binary" value="false"/>
            <property name="hibernate.flushMode" value="COMMIT"/>
        </properties>
    </persistence-unit>
</persistence>